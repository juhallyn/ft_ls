OPTION ARG
					-l, -R, -a, -r et -t.


	si il n'y a pas de '-'		ls : tente d'ouvrir l'arg
	si il y a '--'				ls : traite tout les arg comme etant des
:q
								fichier/dossier a ouvrir
ERREUR
	si il y a une(des) erreur(s)	ls : les affiches toujours au debut;


Tri par insertion 			OK


void	apply_options(char *options)
{
	int		(*tab[5])(int);
	int		j;

	j = 0;

------------------------------------------------------------------------------------------------

	tab[0] = &--> list_file(argv, 					!*ptr_fn('a'));
	tab[1] = &--> recurse(list_file(argv),				*ptr_fn(&recurse));
	tab[2] = &--> print_list('l');
	tab[3] = &--> list_file(argv, 					*ptr_fn(&sort_time);
	tab[4] = &--> list_file(argv, 					*ptr_fn(&sort_rev)

-----------------------------------------------------------------------------------------------
	i = read_option(options);
	while (j < ft_strlen(options))
	{
		tab[i](option[j]);
		j++;
	}
}

